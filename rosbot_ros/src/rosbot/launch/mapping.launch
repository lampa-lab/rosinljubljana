    <!-- GUI -->
    <node name="rqt_gui" pkg="rqt_gui" type="rqt_gui" output="screen" args = "--perspective-file $(find rosbot)/cfg/rqt_gui.perspective"/>
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find rosbot)/cfg/mapping.rviz" output="screen"/>
</launch>